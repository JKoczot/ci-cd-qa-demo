{
  "name": "ci-cd-qa-demo",
  "version": "1.0.0",
  "description": "Repo do nauki/prezentacji CI/CD",
  "main": "index.js",
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "lint": "biome check --reporter=summary .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "build": "tsc"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format && npm run lint",
    "pre-push": "npm run lint && npm run typecheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JKoczot/ci-cd-qa-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JKoczot/ci-cd-qa-demo/issues"
  },
  "homepage": "https://github.com/JKoczot/ci-cd-qa-demo#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  }
}
